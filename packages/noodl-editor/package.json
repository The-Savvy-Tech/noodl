    "stringify": "^5.2.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.8.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=16.0.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  }
}
